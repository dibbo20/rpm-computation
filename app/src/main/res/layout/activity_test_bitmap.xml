<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestBitmap"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:drawableRight="@drawable/ic_file_upload_black_24dp"
        android:text="Upload Video "
        android:id="@+id/uploadVideoTv"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="Extract Images  "
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_content_copy_black_24dp"
        android:id="@+id/extractImagesTv"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="Create Histogram "
        android:textAlignment="center"
        android:drawableRight="@drawable/graph_24dp"
        android:id="@+id/CreateHistImagesTv"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="Calculate Result "
        android:textAlignment="center"
        android:drawableRight="@drawable/ic_calculator"
        android:id="@+id/calculateResult"/>

    <Button
        android:layout_width="wrap_content"
        android:drawableRight="@drawable/spin_24dp"
        android:layout_height="wrap_content"
        android:id="@+id/testImView"
        android:text="RPM "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textAlignment="center"/>


    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:visibility="invisible"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/white"
        android:indeterminateTint="#1a09d6"
        android:layout_marginTop="-7dp"
        />
</LinearLayout>